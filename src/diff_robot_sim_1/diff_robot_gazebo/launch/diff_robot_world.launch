<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <!-- Robot pose -->
  <arg name="x" default="0"/>
  <arg name="y" default="0"/> 
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <!-- Launch other relevant files-->
  <include file="$(find diff_robot_description)/launch/robot_desciption.launch"/>


  <!-- World File -->
  <arg name="world_file" default="$(find diff_robot_gazebo)/world/home_1.world"/>


  <!-- Launch Gazebo World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/> <!--  من غيره ممكن يعمل ايرور في اماكن تانيه لو بعمل سيميوليشن دا مهم لانه بيستخدم الوقت الحقيقي -->
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" /> <!-- بيعمل انه يفتح الجازيبو ويعرض الروبوت لو مقفول جازيبو بيشتغل في الباك جراوند -->
    <arg name="world_name" value="$(arg world_file)"/>
  </include>



 <!-- Find my robot Description-->
  <param name="diff_robot_description" command="$(find xacro)/xacro --inorder '$(find diff_robot_description)/urdf/diff_robot.xacro'"/>

  <!-- Spawn My Robot --> <!-- بيحط الروبوت بتاعي جوا جازيبو يعني بيعمل سباون للروبوت -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" 
        args="-urdf -param robot_description -model diff_robot 
              -x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)"/>


<!--launch rviz-->
  <!-- <node name="rviz" pkg="rviz" type="rviz" respawn="false"/>  -->

</launch>